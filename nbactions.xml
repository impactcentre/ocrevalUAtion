<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>run</actionName>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
            </goals>
            <properties>
                <exec.args>-classpath %classpath eu.digitisation.Main -gt src/test/resources/OfTheSciences_gt_TXT.txt -ocr src/test/resources/OfTheSciences_ocr_PAGE.xml -r src/main/resources/replacements.txt -d tmp</exec.args>
                <exec.executable>java</exec.executable>
                <exec.workingdir></exec.workingdir>
            </properties>
        </action>
        <action>
            <actionName>debug</actionName>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
            </goals>
            <properties>
                <exec.args>-Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address} -classpath %classpath eu.digitisation.Main -gt src/test/resources/OfTheSciences_gt_TXT.txt -ocr src/test/resources/OfTheSciences_ocr_PAGE.xml -r src/main/resources/replacements.txt -d tmp</exec.args>
                <exec.executable>java</exec.executable>
                <jpda.listen>true</jpda.listen>
                <exec.workingdir></exec.workingdir>
            </properties>
        </action>
        <action>
            <actionName>profile</actionName>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
            </goals>
            <properties>
                <exec.args>-classpath %classpath eu.digitisation.Main -gt src/test/resources/OfTheSciences_gt_TXT.txt -ocr src/test/resources/OfTheSciences_ocr_PAGE.xml -r src/main/resources/replacements.txt -d tmp</exec.args>
                <exec.executable>${profiler.java}</exec.executable>
                <exec.workingdir></exec.workingdir>
            </properties>
        </action>
    </actions>
